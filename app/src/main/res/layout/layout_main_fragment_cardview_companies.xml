<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/main_fragment_comp_card"
        android:layout_width="170sp"
        android:layout_height="270sp"
        android:layout_margin="5sp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="7sp"
        app:cardElevation="0sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="220sp">

                <ImageView
                    android:id="@+id/main_fragment_comp_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/compName"
                    android:scaleType="centerCrop"
                    android:src="@drawable/loading_image_background"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/main_fragment_comp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:text="@string/compName"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/main_fragment_comp_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:text="@string/compType"
                android:textSize="12sp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>