<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/main_fragment_comp_card"
        android:layout_width="170sp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="260sp"
        android:layout_margin="5sp"
        app:cardCornerRadius="7sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_fragment_comp_image"
                android:layout_width="match_parent"
                android:layout_height="220sp"
                android:contentDescription="@string/compName"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_marginTop="5sp"
                android:id="@+id/main_fragment_comp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2sp"
                android:layout_marginLeft="2sp"
                android:text="@string/compName"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/main_fragment_comp_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2sp"
                android:layout_marginLeft="2sp"
                android:text="@string/compType"
                android:textSize="12sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>