<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/full_screen_dialog_appbar"
        android:layout_width="match_parent"
        android:paddingTop="25sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/full_screen_dialog_nested_scroll_view"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/full_screen_dialog_button_close"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/close"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_arrow_back_white"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="status"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/full_screen_dialog_button_save"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:enabled="false"
                android:gravity="center"
                android:text="post"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/full_screen_dialog_nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:scrollbars="none"
        android:background="#fdfdfd"
        android:scrollingCache="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/full_screen_dialog_appbar">

        <LinearLayout
            android:background="#fdfdfd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/full_screen_dialog_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:ems="10"
                android:gravity="top"
                android:hint="write status"
                android:inputType="textPersonName|textCapSentences"
                android:maxLength="450"
                android:maxLines="10"
                android:minHeight="150sp"
                android:overScrollMode="always"
                android:padding="10sp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:textColor="@color/colorBlack"
                android:textColorHighlight="@color/colorPrimary"
                android:textSize="18sp">

                <requestFocus/>
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_margin="10sp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:padding="0sp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/add_image"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>