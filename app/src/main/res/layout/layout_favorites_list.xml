<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8sp"
        app:cardElevation="2sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/compImageView"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginEnd="8sp"
                android:layout_marginRight="8sp"
                android:contentDescription="@string/logo"
                android:scaleType="centerCrop"
                android:src="@drawable/img_wall_9"/>

            <TextView
                android:id="@+id/compNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/compImageView"
                android:layout_toRightOf="@id/compImageView"
                android:text="@string/universityNameValue"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/shortDescView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/compNameView"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/compImageView"
                android:layout_toRightOf="@id/compImageView"
                android:text="@string/universityDescValue"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <TextView
                android:id="@+id/viewRatingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shortDescView"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/compImageView"
                android:layout_toRightOf="@id/compImageView"
                android:background="@color/colorPrimary"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/four"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/compTypeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewRatingView"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/compImageView"
                android:layout_toRightOf="@id/compImageView"
                android:text="@string/university"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="50sp"
            android:layout_height="35sp"
            android:layout_gravity="top|end"
            android:contentDescription="@string/favorites"
            android:elevation="2sp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_favorited"
            tools:targetApi="lollipop"/>
    </android.support.v7.widget.CardView>

