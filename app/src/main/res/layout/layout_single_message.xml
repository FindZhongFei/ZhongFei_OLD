<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="top"
            app:cardCornerRadius="20sp">

            <ImageView
                android:id="@+id/user_signed_in_profile_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/profilePicture"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/user"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/message_bubble_their">

            <TextView
                android:id="@+id/layout_single_message_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:padding="7sp"
                android:text="@string/notAUserRegisterTxt"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="15sp"
        android:background="@drawable/message_bubble_mine"
        android:gravity="end">

        <TextView
            android:id="@+id/layout_single_message_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:padding="7sp"
            android:text="@string/notAUserRegisterTxt"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>
</LinearLayout>