<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_background"
    android:orientation="vertical">

    <include
        android:id="@+id/activity_register2_toolbar"
        layout="@layout/layout_toolbar"/>

    <ScrollView
        android:id="@+id/register_scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_timeline_view2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_register_fields"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15sp"
                        android:layout_marginRight="15sp"
                        android:text="@string/add1"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/in_add1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text"
                        android:ems="10"
                        android:hint="@string/add1Value"
                        android:inputType="text|textCapSentences"
                        android:paddingStart="0sp"
                        android:paddingLeft="0sp"
                        android:paddingEnd="15sp"
                        android:paddingRight="15sp"
                        android:textColor="@color/colorBlack"
                        android:textColorHighlight="@color/toolbarColorLeft"
                        android:textSize="18sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="10sp"
                    android:background="@color/light_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15sp"
                        android:layout_marginRight="15sp"
                        android:text="@string/add2"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/in_add2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text"
                        android:ems="10"
                        android:hint="@string/add2Value"
                        android:inputType="text|textCapSentences"
                        android:paddingStart="0sp"
                        android:paddingLeft="0sp"
                        android:paddingEnd="15sp"
                        android:paddingRight="15sp"
                        android:textColor="@color/colorBlack"
                        android:textColorHighlight="@color/toolbarColorLeft"
                        android:textSize="18sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="10sp"
                    android:background="@color/light_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="5sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="65sp"
                        android:layout_marginRight="65sp"
                        android:text="@string/city"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/in_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text"
                        android:ems="10"
                        android:hint="@string/cityValue"
                        android:inputType="text|textCapSentences"
                        android:paddingStart="0sp"
                        android:paddingLeft="0sp"
                        android:paddingEnd="15sp"
                        android:paddingRight="15sp"
                        android:textColor="@color/colorBlack"
                        android:textColorHighlight="@color/toolbarColorLeft"
                        android:textSize="18sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="10sp"
                    android:background="@color/light_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="25sp"
                        android:layout_marginRight="25sp"
                        android:text="@string/province"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/in_province"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text"
                        android:ems="10"
                        android:hint="@string/provinceValue"
                        android:inputType="text|textCapSentences"
                        android:paddingStart="0sp"
                        android:paddingLeft="0sp"
                        android:paddingEnd="15sp"
                        android:paddingRight="15sp"
                        android:textColor="@color/colorBlack"
                        android:textColorHighlight="@color/toolbarColorLeft"
                        android:textSize="18sp"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="40sp"/>

            <Button
                android:id="@+id/btnNextRegister2"
                android:layout_width="340sp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40sp"
                android:layout_weight="1"
                android:background="@drawable/btn_login_background_disabled"
                android:enabled="false"
                android:text="@string/next"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>