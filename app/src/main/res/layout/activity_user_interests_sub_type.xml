<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UserInterestsActivity">

    <include
        android:id="@+id/user_interests_toolbar"
        layout="@layout/layout_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center"
                android:text="@string/userSelectInterests"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/image_1_1_interest"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:text="Aerospace industry"
                        android:textColor="@color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:text="Aerospace industry"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/image_1_2_interest"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:text="Agriculture"
                        android:textColor="@color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:text="Agriculture"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/image_1_3_interest"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:text="Chemical industry"
                        android:textColor="@color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:text="Chemical industry"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/image_2_1_interest"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:text="Computer industry"
                        android:textColor="@color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:text="Computer industry"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/image_2_2_interest"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:text="Construction industry"
                        android:textColor="@color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:text="Construction industry"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/image_2_3_interest"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:text="Defense industry"
                        android:textColor="@color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:text="Defense industry"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/image_3_1_interest"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:text="Education industry"
                        android:textColor="@color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:text="Education industry"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/image_3_2_interest"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:text="Energy industry"
                        android:textColor="@color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:text="Energy industry"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/image_3_3_interest"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:text="Entertainment industry"
                        android:textColor="@color/transparent"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:text="Entertainment industry"/>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/user_interests_submit_button"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="@string/done"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>