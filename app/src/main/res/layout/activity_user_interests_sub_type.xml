<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/user_sub_interests_toolbar"
        layout="@layout/layout_toolbar"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/user_sub_interests_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        app:layout_constraintBottom_toTopOf="@+id/user_sub_interests_submit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_sub_interests_toolbar"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:gravity="center_horizontal|center"
                android:text="@string/userSelectSubInterests"/>

            <include
                android:id="@+id/interest_sub_interests"
                layout="@layout/layout_interests_sub_type_list"/>

        </LinearLayout>
    </ScrollView>

    <Button
        app:layout_constraintTop_toBottomOf="@id/user_sub_interests_scroll_view"
        android:id="@+id/user_sub_interests_submit_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="@string/done"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>

