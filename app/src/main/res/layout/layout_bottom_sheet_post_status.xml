<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_post_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:orientation="horizontal"
    android:weightSum="2"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0sp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <Button
        android:id="@+id/bottom_sheet_post_status_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_edit_profile"
        android:drawablePadding="15sp"
        android:text="POST STATUS"/>

    <Button
        android:id="@+id/bottom_sheet_post_video_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_video_call_black"
        android:drawablePadding="5sp"
        android:text="POST VIDEO"/>

</LinearLayout>